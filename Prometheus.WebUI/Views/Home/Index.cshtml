@{
	ViewBag.Title = "Home";
	ViewBag.Links = null;
	Layout = "~/Views/Shared/_BasicLayout.cshtml";
}
@Html.Partial("PartialViews/_TitleBar", null)
<div class="panel-primary" style="margin-top: -10px; width: 100%;">
	<div class="panel-heading">
		<h1>Prometheus IT Service Management</h1>
	</div>
	<div class="panel-body" style="background-color: #eef2f7;">
		<div class="content-body" style="display:flex; flex-wrap: wrap;">

			<div class="flex-col content-cell">
				<div style="height: 80px;">
					<a href="@Url.Action("Index", "ServicePortfolio")"><img src="~/Content/Images/invest.png" alt="Service Portfolio" style="height: 72px; width: 77px;"></a>
				</div>
				<div>
					<label class="font-home-link">@Html.ActionLink("ServicePortfolio", "Index", "ServicePortfolio", null, new { @class = "font-home-link" })</label>
				</div>
			</div>


			<div class="flex-col content-cell">
				<div style="height: 80px;">
					<a href="@Url.Action("Index", "Service")"><img src="~/Content/Images/pie.png" alt="Services" style="height: 68px; width: 69px;"></a>
				</div>
				<div>
					<label class="font-home-link">@Html.ActionLink("Services", "Index", "Service", null, new { @class = "font-home-link" })</label>
				</div>
			</div>

			<div class="flex-col content-cell">
				<div style="height: 80px;">
					<a href="@Url.Action("Business", "ServiceCatalog")"><img src="~/Content/Images/presentation.png" alt="Service Catalog" style="height: 72px; width: 77px;"></a>
				</div>
				<div>
					<label class="font-home-link">@Html.ActionLink("Business Service Catalog", "Business", "ServiceCatalog", null, new { @class = "font-home-link" })</label>
				</div>
			</div>

			<div class="flex-col content-cell">
				<div style="height: 80px;">
					<img src="~/Content/Images/people-network.png" alt="Services" style="height: 80px; width: 74px;">
				</div>
				<div>
					<label class="font-home-link">Submit a Service Request</label>
				</div>
			</div>
			<div class="flex-col content-cell">
				<div style="height: 80px;">
					<img src="~/Content/Images/shake.png" alt="Services" style="height: 70px; width: 88px;">
				</div>
				<div>
					<label class="font-home-link">Service Request Approvals</label>
				</div>
			</div>
		</div>
	</div>

	<div style="padding: 10px; background-color: white; border-top: 1px solid #ccc;">
		<table style="width: 100%">
			<tr>
				<td></td>
			</tr>
			<tr>
				<td style="width: 33%">
					@Html.ActionLink("System Access", "Index", "SystemAccess")
					<br />@Html.ActionLink("Services Maintenance", "Index", "ServiceMaintenance")
				</td>
				<td style="width: 33%; vertical-align: top;">Service request templates</td>
				<td></td>
				<td style="width: 33%">Scripts <br />Fullfilment Queue</td>
			</tr>
		</table>
	</div>
	<div class="panel-footer">
		<span class="copyright-notice">&copy;2017 Prometheus</span>
	</div>
</div>

