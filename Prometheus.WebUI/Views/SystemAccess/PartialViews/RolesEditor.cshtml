<script type="text/javascript" language="javascript">
	$('#ApiAccess@(Model.ApiAccess)').button('toggle');
	$('#ApproveServiceRequestAccess@(Model.ApproveServiceRequestAccess)').button('toggle');
	$('#BusinessCatalogAccess@(Model.BusinessCatalogAccess)').button('toggle');
