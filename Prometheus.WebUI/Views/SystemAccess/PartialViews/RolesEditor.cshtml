@model Common.Dto.RoleDto
@using System.Web.Mvc.Html
@using Common.Enums.Permissions
@using Prometheus.WebUI.Helpers

<input type="hidden" name="id" value="@Model.Id" />

<table>
	<tr>
		<td class="dt-cell">Name</td>
		<td class="dd-cell">
			@Html.TextBox("Name", Model.Name, new { @class = "form-control" })
			@Html.ValidationMessage("Name")
		</td>
	</tr>
</table>

<div class="flex-container-col">

	<div class="dt-text make-space-top">API Access</div>
	<div class="btn-group" data-toggle="buttons">
		@foreach (ApiAccess permission in Enum.GetValues(typeof(ApiAccess)))
		{
			<label class="btn btn-default" id="ApiAccess@(permission)">
				@Html.RadioButton("ApiAccess", permission, Model.ApiAccess == permission)
				@StringHelper.CamelToString(permission.ToString())
			</label>
		}
	</div>

	<div class="make-space-top dt-text">Approve Service Requests</div>
