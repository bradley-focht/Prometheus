@model Common.Dto.ILifecycleStatusDto

    <div class="dd">
        @foreach (var property in ViewData.ModelMetadata.Properties)
        {
            switch (property.PropertyName)
            {
                case "Position":
                case "Name":
                    <div class="dd-row">
                        <div class="dt-cell">@(property.DisplayName ?? property.PropertyName)</div>
                        <div class="dd-cell">@property.Model</div>
                    </div>
                    break;
                case "CatalogVisible":
                    <div class="dd-row">
                        <div class="dt-cell">@(property.DisplayName ?? property.PropertyName)</div>
                        <div class="dd-cell">
                            @if (property.Model.Equals(true))
                            {
                                <text>Yes</text>
                            }
                            else
                            {
                                <text>No</text>
                            }
                        </div>
                    </div>
                    break;

                default:
                    continue;
            }
        }
    </div>