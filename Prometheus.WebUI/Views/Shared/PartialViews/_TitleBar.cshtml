@model List<KeyValuePair<string, string>>
@using Prometheus.WebUI.Helpers
@using Prometheus.WebUI.HtmlHelpers

<div class="navbar-inverse navbar-fixed-top">

    <div class="flex-container content-body">

        <table style="width: 100%">

            <tr>
                <td style="width: 80%">
                    <div class="float-left-div">
                        <label class="navbar-brand">@ViewBag.Title</label>
                    </div>
                </td>
                <td style="vertical-align: central">
                    <span class="font-inverse">@Session["DisplayName"]</span>
                    <div class="float-right-div" style="width: 50%;">

                        <div class="dropdown">

                            <span class="hamburger-menu btn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">&equiv;</span>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <ul class="list-unstyled">
                                    <li><a class="dropdown-item" href="~/UserAccount/Logout">Logout</a></li>
                                    <li><span class="dropdown-item">Sean's special hamburger menu</span></li>

                                </ul>
                                <div class="dropdown-divider"></div>
                                <span class="dropdown-header" style="font-size: 1em;">Roles</span>
                                <ul class="list-unstyled">
                                    <li>God Mode</li>
                                    <li>Human</li>
                                    <li>Infidel</li>
                                    <li>Deadbeat</li>
                                    <li>Guest</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        </table>
    </div>

</div>

<div class="breadcrumb-container content-body">
    @if (ViewBag.Links != null)
    {
        @Html.BreadrumbTrail(Model, "breadcrumb", "active")
    }
</div>

@{
    if (TempData["MessageType"] != null && TempData["Message"] != null) /* display messages */
    {
        string cssClass;
        switch (TempData["MessageType"] as WebMessageType?)
        {
            case WebMessageType.Success:
                cssClass = "alert-success";
                break;
            case WebMessageType.Failure:
                cssClass = "alert-danger";
                break;
            case WebMessageType.Info:
                cssClass = "alert-info";
                break;
            default:
                cssClass = null;
                break;
        }
        <div class="content-body" style="background-color: #fff;">
            <div class="alert alert-dismissable @cssClass close" role="alert" data-dismiss="alert" aria-label="Close" style="margin-top: -13px;">
                <span class="float-left-div;">&times;</span>
                @TempData["Message"]
            </div>
        </div>
    }
}
