@model List<KeyValuePair<string, string>>
@using Prometheus.WebUI.Helpers
@using Prometheus.WebUI.HtmlHelpers

<div style="background-color: white;" class="content-body">
    <div class="navbar-inverse navbar-fixed-top" style="min-height: 40px;">
        <div class="content-body">
            <div style="display:flex">
                <div class="float-right-div">
                    <span class="hamburger-menu btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">&equiv;</span>
                </div>
                <div class="float-left-div">
                    <label class="navbar-brand">@ViewBag.Title</label>
                    <span style="color: white;">Contact us: 306-777-7777</span>
                </div>

                </div>
            </div>
        </div>
    <div class="breadcrumb-container content-body">
        @if (ViewBag.Links != null)
        {
            @Html.BreadrumbTrail(Model, "breadcrumb", "active")
        }
    </div>


    @{
        if (TempData["messageType"] != null && TempData["message"] != null)     /* display error or success messages */
        {
            string cssClass;
            switch (TempData["messageType"] as WebMessageType?)
            {
                case WebMessageType.Success:
                    cssClass = "alert-success";
                    break;
                case WebMessageType.Failure:
                    cssClass = "alert-waring";
                    break;
                case WebMessageType.Info:
                    cssClass = "alert-info";
                    break;
                default:
                    cssClass = null;
                    break;
            }

            <div class="alert alert-dismissable @cssClass close" role="alert" data-dismiss="alert" aria-label="Close" style="margin-top: -13px;">
                <span class="float-left-div;">&times;</span>
                @TempData["message"]
            </div>
        }
    }

</div>