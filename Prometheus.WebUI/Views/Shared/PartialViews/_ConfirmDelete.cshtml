@model Prometheus.WebUI.Models.Shared.ConfirmDeleteModel

@using (Html.BeginForm(Model.DeleteAction, Model.ControllerName, FormMethod.Post)) {
@Html.HiddenFor(m=>Model.Id);
<div class="std-div">
    <div>
        Are you sure you want to delete this bitch?
    </div>
    <div class="panel panel-footer" style="width:100%;">
        <div class="float-right-div">
            @Html.ActionLink("Cancel", Model.CancelAction, Model.CancelArgs, new { @class = "btn btn-default" })
            <input type="submit" value="Confirm" class="btn btn-danger"/>
        </div>
    </div>
</div>

}