@using Prometheus.WebUI.HtmlHelpers;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Prometheus</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/PrometheusCustom.css" rel="stylesheet" type="text/css" />
</head>
<body>

    @Html.Partial("/Views/Shared/PartialViews/_TitleBar.cshtml")

    <div class="breadcrumb-container">
        @RenderSection("Breadcrumb")
    </div>

    <div class="std-indent">
        <table class="std-table" style="width:100%">
            <tr>
                <td stye="width:20%">@RenderSection("Sidebar")</td>
                <td style="width:80%">@RenderSection("Content")</td>

            </tr>
            <tr>
                <td colspan="2"></td>
            </tr>

        </table>
    </div>
</body>
</html>