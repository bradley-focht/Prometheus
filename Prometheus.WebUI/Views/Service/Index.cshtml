@model Prometheus.WebUI.Models.Service.ServiceViewModel
@{
	ViewBag.Title = "Services ";
	ViewBag.Links = new List<KeyValuePair<string, string>> { new KeyValuePair<string, string>("Home", "Home"),
																new KeyValuePair<string, string>(ViewBag.Title, "#")};
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("PartialViews/ViewControls", Model.ControlsModel)
<div class="flex-row" style="flex-wrap: wrap; justify-content: space-between">
	@if (Model.Services != null && Model.Services.Any())
	{
		foreach (var service in Model.Services)
		{
			<div class="dd" style="width: 50%; margin-top:20px;">
				<div class="dd-row">
					<div class="color-bar"></div>
					<div class="dd-cell-nostyle">
						<div class="dd">
							<div class="dd-row">
								<div class="dd-cell-base">@Html.ActionLink(service.Name, "Show", new { section = "General", id = service.Id }, new { @class = "font-title1" })</div>
							</div>
							<div class="dd-row">
								<div class="dd-cell-base">@Html.Raw(service.Description)</div>
							</div>
							<div class="dd-row">
								<div class="dd-cell-base">
									<div class="dd">
										<div class="dd-row">
											<div class="dt-cell">Status</div>
											<div class="dd-cell">@service.LifecycleStatusDto.Name</div>
										</div>
										<div class="dd-row">
											<div class="dt-cell">Service Owner</div>
											<div class="dd-cell">@service.ServiceOwner</div>
										</div>
									</div>
								</div>
							</div>
						</div>

					</div>

				</div>
			</div>
		}

	}
</div>