@model IEnumerable<Common.Dto.IServiceDto>
@{
    ViewBag.Title = "Services ";
    ViewBag.Links = new List<KeyValuePair<string, string>> { new KeyValuePair<string, string>("Home", "Home"),
                                                                new KeyValuePair<string, string>(ViewBag.Title, "#")};
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="flex-container">
    <div>
        <div class="float-right-div">
            @Html.ActionLink("Add Service", "AddService", null, null)
        </div>
    </div>
</div>

@if (Model != null && Model.Any())
{
    foreach (var service in Model)
    {
        <label class="font-title2-blue">@Html.ActionLink(service.Name, "Show", new {id = service.Id, section = "General"}, null)</label>
        <dl class="dl-horizontal dl-section">

            <dt>Description</dt>
            <dd>@Html.Raw(service.Description)</dd>

            <dt>Status</dt>
            <dd>
                @{
                    if (service.LifecycleStatusDto != null)
                    {
                        @Html.Display(service.LifecycleStatusDto.Name)
                    }
                }
            </dd>
        </dl>
    }

}