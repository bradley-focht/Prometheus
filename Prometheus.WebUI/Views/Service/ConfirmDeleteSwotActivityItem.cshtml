
@model Prometheus.WebUI.Models.Service.ConfirmDeleteSectionItemModel

@{
    ViewBag.Title = "Services";
    ViewBag.SubTitle = "Confirm Deletion";
    ViewBag.Links = new List< KeyValuePair < string, string>> {
                                                                new KeyValuePair<string, string>("Home", "Home"),
                                                                new KeyValuePair<string, string>("Services", "Service/Index"),
                                                                new KeyValuePair<string, string>(Model.Service, "Service/Show/Swot/" + Model.ServiceId),
                                                                new KeyValuePair<string, string>(Model.AltName, "Service/ShowServiceSectionItem/" + Model.ServiceId + "/Swot/" + Model.AltId),
                                                                new KeyValuePair<string, string>(Model.Name, $"Service/ShowSwotActivity/{Model.Id}"),
                                                                new KeyValuePair<string, string>(ViewBag.SubTitle, "#")};

    Layout = "~/Views/Shared/_SidebarLayout.cshtml";
}

@section Content
{

        @using (Html.BeginForm(Model.DeleteAction, "Service", FormMethod.Post))
        {
            <input type="hidden" name="Id" value="@Model.Id"/>
            <input type="hidden" name="ServiceId" value="@Model.ServiceId"/>
            <input type="hidden" name="FriendlyName" value="@Model.Name"/>

                <div class="panel">
                    Are you sure you want to delete
                    <section class="present-section">
                        @Model.Name
                    </section>
                </div>

                <div class="flex-container">
                    <div class="panel panel-footer">
                        <div class="float-right-div">
                            @Html.ActionLink("Cancel", "ShowServiceSectionItem", new { id = Model.Id, }, new { @class = "btn btn-default" })
                            <input type="submit" value="Confirm Delete" class="btn btn-danger"/>

                        </div>
                    </div>
                </div>
        }

}

@section Sidebar
{

}
