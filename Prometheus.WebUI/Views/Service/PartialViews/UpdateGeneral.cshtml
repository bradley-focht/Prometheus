@using Common.Enums
@model Prometheus.WebUI.Models.Service.ServiceSectionModel

<input type="hidden" name="Id" value="@Model.Service.Id" />
<table>

    <tr>
        <td class="dt-cell">Name</td>
        <td class="dd-cell">
            @Html.TextBox("Name", Model.Service.Name, new {@class = "form-control"})
            @Html.ValidationMessageFor(model => model.Name )
        </td>
    </tr>


    <tr>
        <td class="dt-cell">Description</td>
        <td class="dd-cell">
            @Html.TextArea("Description", Model.Service.Description, new {@class = "ckeditor"})

        </td>
    </tr>

    <tr>
        <td class="dt-cell">Service Owner</td>
        <td class="dd-cell">
            @Html.TextBox("ServiceOwner", Model.Service.ServiceOwner, new {@class = "form-control"})

        </td>
    </tr>

     <tr>
        <td class="dt-cell">Service Type</td>
        <td class="dd-cell">
            <table style="margin-top: 10px; margin-bottom: 10px;">
                <tr>
                    <td class="dt-cell">
                        Role
                    </td>
                    <td class="dd-cell">
                        <div class="btn-group" data-toggle="buttons">
                            <label class="btn btn-default" id="@ServiceTypeRole.Business">
                                @Html.RadioButton("ServiceTypeRole", ServiceTypeRole.Business, false) Customer-facing
                            </label>

                            <label class="btn btn-default" id="@ServiceTypeRole.Supporting">
                                @Html.RadioButton("ServiceTypeRole", ServiceTypeRole.Supporting, false) Supporting
                            </label>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td class="dt-cell">
                        Provision
                    </td>
                    <td class="dd-cell">
                        <div class="btn-group" data-toggle="buttons">
                            <label class="btn btn-default" id="@ServiceTypeProvision.Internal">
                                @Html.RadioButton("ServiceTypeProvision", ServiceTypeProvision.Internal, false) Internal
                            </label>
                            <label class="btn btn-default" id="@ServiceTypeProvision.External">
                                @Html.RadioButton("ServiceTypeProvision", ServiceTypeProvision.External, false) External
                            </label>
                        </div>

                    </td>
                </tr>
            </table>
        </td>
    </tr>
    <tr>
        <td class="dt-cell">Lifecycle Status</td>
        <td class="dd-cell">
            @Html.DropDownList("LifecycleStatusId", Model.StatusNames, new { placeholder = "Lifecycle Status", style = "max-width: 300px;" })
            @Html.ValidationMessageFor(model => model.LifecycStatusId)
        </td>
    </tr>
    <tr>
        <td class="dt-cell">Service Bundle</td>
        <td class="dd-cell">
            @Html.DropDownList("ServiceBundleId", Model.ServiceBundleNames, new { placeholder="Service Bundle", style="max-width: 300px;"})
            @Html.ValidationMessageFor(model => model.ServiceBundleId)
        </td>
    </tr>
</table>

<script type="text/javascript" language="javascript">
@if (Model.Service.Id > 0)
{
    <text>
        $('#@(Model.Service.ServiceTypeProvision)').button('toggle');
        $('#@(Model.Service.ServiceTypeRole)').button('toggle');
    </text>
}
    $('#LifecycleStatusId')
                .selectize({
                    maxItems: 1
                });
    $('#ServiceBundleId')
                .selectize({
                    maxItems: 1
                });
</script>