@using Common.Enums
@model Common.Dto.ServiceDto

<input type="hidden" name="Id" value="@Model.Id" />
<table>

    <tr>
        <td class="dt-cell">Name</td>
        <td class="dd-cell">
            @Html.TextBox("Name", Model.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Name)
        </td>
    </tr>


    <tr>
        <td class="dt-cell">Description</td>
        <td class="dd-cell">
            @Html.TextArea("Description", Model.Description, new { @class = "ckeditor" })

        </td>
    </tr>

    <tr>
        <td class="dt-cell">Business Owner</td>
        <td class="dd-cell">
            @Html.TextBox("Service Owner", Model.BusinessOwner, new { @class = "form-control" })

        </td>
    </tr>


    <tr>
        <td class="dt-cell">Business Owner</td>
        <td class="dd-cell">
            @Html.TextBox("Business Owner", Model.BusinessOwner, new { @class = "form-control" })

        </td>
    </tr>


    <tr>
        <td class="dt-cell">Service Type</td>
        <td class="dd-cell">
            <table style="margin-top: 10px; margin-bottom: 10px;">
                <tr>
                    <td class="dt-cell">
                        Role
                    </td>
                    <td class="dd-cell">
                        <div class="btn-group" data-toggle="buttons">
                            <label class="btn btn-default">
                                @Html.RadioButton("ServiceTypeRole", ServiceTypeRole.Business, false) Customer-facing
                            </label>

                            <label class="btn btn-default">
                                @Html.RadioButton("ServiceTypeRole", ServiceTypeRole.Supporting, false) Supporting
                            </label>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td class="dt-cell">
                        Provision
                    </td>
                    <td class="dd-cell">
                        <div class="btn-group" data-toggle="buttons">
                            <label class="btn btn-default">
                                @Html.RadioButton("ServiceTypeProvision", ServiceTypeProvision.Internal, false) Internal
                            </label>
                            <label class="btn btn-default">
                                @Html.RadioButton("ServiceTypeProvision", ServiceTypeProvision.External, false) External
                            </label>
                        </div>

                    </td>
                </tr>
            </table>
        </td>
    </tr>


    <tr>
        <td class="dt-cell">Lifecycle Status</td>
        <td class="dd-cell">
            @Html.Action("ShowLifecycleStatuses")
        </td>
    </tr>
    <tr>
        <td class="dt-cell">Service Bundle</td>
        <td class="dd-cell">
            @Html.Action("ShowServiceBundles")
        </td>
    </tr>
</table>