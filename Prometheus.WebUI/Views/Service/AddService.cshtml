@{
    ViewBag.Title = "Services";
    ViewBag.SubTitle = "Add New Service";
    ViewBag.Links = new List<KeyValuePair<string, string>> { new KeyValuePair<string, string>("Home", "Home"),
                                                             new KeyValuePair<string, string>("Services", "Service/Index"),
                                                             new KeyValuePair<string, string>(ViewBag.SubTitle, "#")};
    Layout = "~/Views/Shared/_SidebarLayout.cshtml";
}

@section Sidebar
{
    @Html.Action("ShowServiceList", 0)
}

@section Content {
        <div class="title-div">
            @ViewBag.SubTitle
        </div>

        @using (Html.BeginForm("Save", "Service", FormMethod.Post))
    {
            <div class="panel-body">
                @Html.Partial("PartialViews/UpdateGeneral", new Common.Dto.ServiceDto())
            </div>
                <div class="flex-container">
                    <div class="panel-footer">
                        <div class="float-right-div">
                            <input type="submit" value="Save" class="btn btn-primary" />
                            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })

                        </div>
                    </div>
                </div>
            
        }
}
