@using Prometheus.WebUI.Models.Shared
@model Prometheus.WebUI.Models.ServicePortfolio.ServiceBundleModel
@{
    ViewBag.Title = "Edit " + Model.CurrentServiceBundle.Name;

    Layout = "~/Views/Shared/_SidebarLayout.cshtml";

    ViewBag.Links = new List<KeyValuePair<string, string>> { new KeyValuePair<string, string>("Home", "Home"),
                                                             new KeyValuePair<string, string>("View Service Bundles", "ServicePortfolio/Show/"),
                                                             new KeyValuePair<string, string>(ViewBag.Title, "#") };
    //item list for ItemListView partial view
    LinkListModel listModel = new LinkListModel(Model.ServiceBundles, Model.CurrentServiceBundle.Id, "Show", "Add", "Service Bundles");
}

@section Sidebar {
    @Html.Partial("/Views/Shared/PartialViews/_LinkList.cshtml", listModel)

}

@section Content {
    @Html.Partial("/Views/ServicePortfolio/PartialViews/ServiceBundleEditor.cshtml", Model.CurrentServiceBundle)
}