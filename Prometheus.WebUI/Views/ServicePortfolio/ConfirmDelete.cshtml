@model Common.Dto.ServiceBundleDto
@{
    ViewBag.Title = "Service Portfolio";
    ViewBag.SubTitle = "Confirm Delete";
    Layout = "~/Views/Shared/_SidebarLayout.cshtml";

    ViewBag.Links = new List<KeyValuePair<string, string>> { new KeyValuePair<string, string>("Home", "Home"),
                                                             new KeyValuePair<string, string>("Service Portfolio", "ServicePortfolio/Index"),
                                                             new KeyValuePair<string, string>(Model.Name, "ServicePortfolio/Show/" + Model.Id),
                                                             new KeyValuePair<string, string>(ViewBag.Title, "#") };
}
@section Content {
    @using (Html.BeginForm("Delete", "ServicePortfolio", FormMethod.Post))
    {
        @Html.Hidden("Id", Model.Id)

            <div class="title-div">Confirm Deletion</div>
	    <div class="panel-div">
		    Are you sure you want to delete Service Bundle
		    <div>
			    <div class="present-section">
				    @Model.Name
			    </div>
		    </div>
	    </div>
		<div class="flex-container-col">
				<div class="panel-footer">
					<div class="float-right-div">
						@Html.ActionLink("Back", "Show", new { id = Model.Id }, new { @class = "btn btn-default" })
						<input type="submit" value="Confirm Delete" class="btn btn-danger" />
					</div>
				</div>
			</div>
	}
}

@section Sidebar { }


