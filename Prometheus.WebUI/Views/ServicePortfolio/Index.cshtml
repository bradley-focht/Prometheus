@using Common.Dto
@model IEnumerable<IServiceBundleDto>

@{
	ViewBag.Title = "Service Portfolio";
	ViewBag.Links = new List<KeyValuePair<string, string>> { new KeyValuePair<string, string>("Home", "Home"), new KeyValuePair<string, string>(ViewBag.Title, "#") };
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="flex-container">
	<div>
		<div class="float-right-div" style="margin-right: 10px;">
			@Html.ActionLink("Add Service Bundle", "Add")
		</div>
	</div>
</div>

<div class="flex-row" style="flex-wrap: wrap">


	@if (Model != null)
	{
		foreach (var serviceBundle in Model)
		{
			<div class="flex-row" style="margin-top: 10px; margin-right: 10px; flex: 1;">
				<div class="color-bar"></div>

				<div class="flex-col">
					<div>
						<label class="font-title1">@serviceBundle.Name</label>

					</div>
					<div>
						@Html.ActionLink("Edit", "Update", new { id = serviceBundle.Id })
					</div>
					<div>
						<div>@Html.Raw(serviceBundle.Description)</div>
					</div>
					<div>
						<div class="font-title3">Business Value</div>
						<div>@Html.Raw(serviceBundle.BusinessValue)</div>
					</div>

					<div>
						<div class="font-title3">Services</div>
						<div>
							@{
								int i = 1;
								foreach (var service in serviceBundle.Services)
								{

									if (i < serviceBundle.Services.Count)
									{
										@service.Name<text>,</text>
										i++;
									}
									else
									{
										@service.Name

									}
								}
							}
						</div>
					</div>
					<div>
						<div class="font-title3">Measures</div>
						<div>@serviceBundle.Measures</div>
					</div>
				</div>

	
			</div>

									}
								}
</div>