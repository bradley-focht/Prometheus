@model Prometheus.WebUI.Models.ServiceRequest.ServiceRequestNavigationModel
@{

}

<div class="flex-row" style="margin-left: -40px;">
    <ul class="sr-navigation">

        @if (Model.SelectedIndex < 0)
        {
            <li class="sr-navigation-active"><button name="submit" value="-1">Info</button></li>
        }
        else
        {
            <li><button name="submit" value="-1">Info</button></li>
        }

        @{
	        int counter = 0;
	        foreach (var title in Model.Titles)
	        {
		        if (Model.SelectedIndex == counter)
		        {
			        <li class="sr-navigation-active"><button disabled="disabled">@title.ServiceOptionCategory.Name </button></li>
		        }
		        else
		        {
			        <li><button type="submit" name="submit" value="@(counter)">@title.ServiceOptionCategory.Name</button></li>
				}
				counter++;
			}
        }

	    <li><button disabled="disabled"></button></li>
    </ul>
</div>
