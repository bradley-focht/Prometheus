@model Prometheus.WebUI.Models.UserAccount.UserAccountModel
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Login", "UserAccount", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="alert alert-info">

        <div>
            <table>
                <tr>
                    <td colspan="2"><b>Login</b></td>
                </tr>
                <tr>
                    <td class="dt-cell">Username</td>
                    <td class="dd-cell">
                        @Html.TextBox("Username", null, new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model.Username)
                    </td>

                </tr>
                <tr>
                    <td class="dt-cell">Password</td>
                    <td class="dd-cell">
                        @Html.Password("Password", null, new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model.Password)
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td class="dd-cell"><input type="submit" name="Login" value="Login" class="btn btn-primary"/></td>

                </tr>

            </table>

        </div>
        <div><b>Or</b></div>
        <div>
            <div> Continue as a @Html.ActionLink("guest", "LoginGuest")</div>
            
        </div>
    </div>



}