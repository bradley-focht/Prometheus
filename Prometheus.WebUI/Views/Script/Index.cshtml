@model IEnumerable<Common.Dto.ScriptDto>

@{
	ViewBag.Title = "Scripts";
    ViewBag.SubTitle = "Scripts";
	Layout = "~/Views/Shared/_SidebarLayout.cshtml";

	ViewBag.Links = new List<KeyValuePair<string, string>>
	{
		new KeyValuePair<string, string>("Home", "Home"),
		new KeyValuePair<string, string>("Scripts", "Script/Index"),
	};

}

@section Content {
    <div class="title-div">@ViewBag.SubTitle</div> @* title *@
    
    @if (Model != null)
    {

        foreach (var item in Model)
        {
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                </tr>
            </table>
        }
    }

}
}

@section Sidebar{
    <div class="flex-container-col">
        <p> No Scripts available </p>
        @* control buttons at the bottom *@
        <div class="panel-footer">
            <div class="float-right-div">
                @Html.ActionLink("Add", "Add", new {}, new {@class = "btn btn-primary"})
            </div>
        </div>
    </div>
}
