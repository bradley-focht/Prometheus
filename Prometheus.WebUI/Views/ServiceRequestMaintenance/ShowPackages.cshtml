@model Common.Dto.ServiceRequestPackageDto
@{
    ViewBag.Title = "Service Request Maintenance";
    ViewBag.SubTitle = "Service Packages";
    Layout = "~/Views/Shared/_SidebarLayout.cshtml";


    ViewBag.Links = new List<KeyValuePair<string, string>>
        {
            new KeyValuePair<string, string>("Home", "Home"),
            new KeyValuePair<string, string>("Service Request Maintenance", "ServiceRequestMaintenance/Index"),
            new KeyValuePair<string, string>(ViewBag.SubTitle, "#")
        };
}

@section Content
{
    @if (Model.Id > 0)
    {
        <div class="title-div">@ViewBag.SubTitle</div>
        <div class="panel-div">
            @Html.Partial("PartialViews/PackageViewer", Model)
        </div>

        <div class="flex-container-col">
            <div class="panel-footer">
                <div class="float-right-div">
                    @Html.ActionLink("Update", "UpdatePackage", new {id = Model.Id}, new {@class="btn btn-primary"})
                    @Html.ActionLink("Delete", "ConfirmDeletePackage", new {id = Model.Id}, new {@class = "btn btn-danger"})
                </div>
            </div>
        </div>
    }

}


@section Sidebar
{
    @Html.Action("GetPackageNames", new {id = Model.Id })
}

