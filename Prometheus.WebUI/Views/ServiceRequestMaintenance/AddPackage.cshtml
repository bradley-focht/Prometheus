@model Prometheus.WebUI.Models.ServiceRequestMaintenance.PackageModel
@{
    ViewBag.Title = "AddPackage";
    Layout = "~/Views/Shared/_SidebarLayout.cshtml";

    ViewBag.SubTitle = "Add Service Package";
    Layout = "~/Views/Shared/_SidebarLayout.cshtml";

    ViewBag.Links = new List<KeyValuePair<string, string>>
        {
            new KeyValuePair<string, string>("Home", "Home"),
            new KeyValuePair<string, string>("Service Request Maintenance", "ServiceRequestMaintenance/Index"),
            new KeyValuePair<string, string>(ViewBag.SubTitle, "#")
        };
}
@section Sidebar {
    <div class="instructions-div">
    <dl>
        <dt>Initial Package</dt>
        <dd>
           The first category selected causes all options in that category to use this package
        </dd>

        <dt>Associations</dt>
        <dd>
           Associated categories in the package will be amended to the package
        </dd>

    </dl>
</div>
}

@section Content {
    <div class="title-div">Add Package</div>
   
@using (Html.BeginForm("SavePackage", "ServiceRequestMaintenance", FormMethod.Post))
{
    <div class="panel-div">
    @Html.Partial("PartialViews/PackageEditor", Model)
    </div>

    <div class="flex-container-col">
        <div class="panel-footer">
            <div class="float-right-div">
                @Html.ActionLink("Back", "ShowPackages", null, new { @class = "btn btn-default btn-back" })
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

}