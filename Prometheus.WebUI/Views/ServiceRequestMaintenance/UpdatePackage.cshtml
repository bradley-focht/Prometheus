@model Prometheus.WebUI.Models.ServiceRequestMaintenance.PackageModel
@{
    ViewBag.Title = "Service Request Maintenance";
    ViewBag.SubTitle = "Update Package";
    Layout = "~/Views/Shared/_SidebarLayout.cshtml";

    ViewBag.Links = new List<KeyValuePair<string, string>>
        {
            new KeyValuePair<string, string>("Home", "Home"),
            new KeyValuePair<string, string>("Service Request Maintenance", "ServiceRequestMaintenance/Index"),
            new KeyValuePair<string, string>(ViewBag.SubTitle, "#")
        };
}

@section Content
{
    <div class="title-div">Update Package</div>
    @using (Html.BeginForm("SavePackage", "ServiceRequestMaintenance", FormMethod.Post))
    {
        <div class="panel-div">
            @Html.Partial("PartialViews/PackageEditor", Model)
        </div>
        <div class="flex-container-col">
            <div class="panel-footer">
                <div class="float-right-div">
                    @Html.ActionLink("Back", "ShowPackages", new {id = Model.Id}, new {@class = "btn btn-default btn-back"})
                    <input type="submit" value="Save" class="btn btn-primary"/>
                </div>
            </div>
        </div>
    }

}
@section Sidebar
{
    
}