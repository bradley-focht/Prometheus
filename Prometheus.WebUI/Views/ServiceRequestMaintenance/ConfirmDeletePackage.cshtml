@model Prometheus.WebUI.Models.ServiceRequestMaintenance.ConfirmDeleteModel
@{
    ViewBag.Title = "Service Request Maintenance";
    ViewBag.SubTitle = "Service Packages";
    Layout = "~/Views/Shared/_SidebarLayout.cshtml";


    ViewBag.Links = new List<KeyValuePair<string, string>>
        {
            new KeyValuePair<string, string>("Home", "Home"),
            new KeyValuePair<string, string>("Service Request Maintenance", "ServiceRequestMaintenance/Index"),
            new KeyValuePair<string, string>(ViewBag.SubTitle, "#")
        };
}

@section Sidebar{}

@section Content{
@using (Html.BeginForm("DeletePackage", "ServiceRequestMaintenance", FormMethod.Post))
    {
    @Html.Hidden("Id", Model.Id)
	<div class="panel-div">
		<div class="title-div">Confirm Deletion</div>
		Confirm that you want to delete Service Request Package
		<div class="present-section">
			@Model.Name
		</div>
	</div>
        <div class="flex-container-col">
            <div class="panel-footer">
                <div class="float-right-div">
                    @Html.ActionLink("Back", "ShowPackages", new { id = Model.Id }, new { @class = "btn btn-default btn-back" })
                    <input type="submit" value="Confirm Delete" class="btn btn-danger" />
                </div>
            </div>
        </div>

}

}


