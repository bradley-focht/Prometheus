@model Prometheus.WebUI.Models.ServiceRequestApproval.ServiceRequestApprovalModel
@{
	ViewBag.Title = "Service Requests";
	Layout = "~/Views/Shared/_Layout.cshtml";

	ViewBag.Links = new List<KeyValuePair<string, string>>
	{
		new KeyValuePair<string, string>("Home", "Home"),
		new KeyValuePair<string, string>("Service Requests", "#")
	};
}
@Html.Partial("PartialViews/ServiceRequestApprovalControls", Model.Controls)

<table class="table table-hover">
    <thead>
    <tr>
        <th>Id</th>
        <th>Request</th>
        <th>Date Submitted</th>
        <th>Date Required</th>
        <th>Status</th>
        <th>Name</th>
        <th></th>
    </tr>
    </thead>
    @* Build SR Table *@
    @foreach (var item in Model.ServiceRequests)
    {
        <tr>
            <td>@item.Id</td>
            <td>@Html.ActionLink(@item.PackageName, "Form", "ServiceRequest", new {id = item.Id, index = -1, serviceOptionId = item.ServiceOptionId}, null )</td>
            <td>@item.State</td>
            

            <td>
                <div class="btn-group">
                    <div data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="btn-empty">
                        <span aria-hidden="true">&#x25BC;</span>
                    </div>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Approve", "Approve")</li>
                        <li>@Html.ActionLink("Cancel", "AddServiceSectionItem") </li>
                        <li>@Html.ActionLink("Reject", "ConfirmDeleteServiceSwotItem")</li>
                    </ul>
                </div>
            </td>
        </tr>
    }
</table>